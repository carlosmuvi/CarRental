<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rental_car_search_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="com.carlosmuvi.carrental.rentalcarsearchform.RentalCarSearchFormActivity"
    >

  <RelativeLayout
      android:id="@+id/pickup_datetime_container"
      android:layout_width="match_parent"
      android:layout_height="65dp"
      >

    <TextView
        android:id="@+id/pickup_datetime_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/pickup_datetime_icon"
        android:text="Pickup date"
        android:textColor="@color/black"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/pickup_datetime_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/pickup_datetime_icon"
        android:text="Pickup date"
        android:textColor="@color/light_grey"
        android:textSize="12dp"
        />
    <ImageView
        android:id="@+id/pickup_datetime_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="18dp"
        android:src="@drawable/ic_access_time_black_24dp"
        />

  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/light_grey"
      />

  <RelativeLayout
      android:id="@+id/dropoff_datetime_container"
      android:layout_width="match_parent"
      android:layout_height="65dp"
      >

    <TextView
        android:id="@+id/dropoff_datetime_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/dropoff_datetime_icon"
        android:text="dropoff date"
        android:textColor="@color/black"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/dropoff_datetime_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/dropoff_datetime_icon"
        android:text="dropoff date"
        android:textColor="@color/light_grey"
        android:textSize="12dp"
        />
    <ImageView
        android:id="@+id/dropoff_datetime_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="18dp"
        android:src="@drawable/ic_access_time_black_24dp"
        />

  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/light_grey"
      />

  <EditText
      android:id="@+id/editText2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="location"
      android:inputType="textPersonName"
      />

</LinearLayout>
